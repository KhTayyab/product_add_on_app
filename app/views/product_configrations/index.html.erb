<% content_for :javascript do %>
  <script type="text/javascript">
     ShopifyApp.ready(function(){
       ShopifyApp.Bar.initialize({ title: "Product Customization" });
     });
  </script>
<% end %>
<div style="margin-left:20px;">
  <%= link_to 'New Customization', new_product_configration_path(:shop => params[:shop]), :class => "btn btn-primary" %>  
</div>

<div class="col-sm-12">
  <h2 class="text-center">Product Customization</h2>
  <div class="table-responsive">
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th class="col-sm-3">Product Name</th>
          <th class="col-sm-3">Product SKU</th>
          <th class="col-sm-3">No of Options</th>
          <th class="col-sm-3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if @product_configrations.count > 0 %>
          <% @product_configrations.each do |product_configration| %>
            <tr>
              <td class="col-sm-3"><%= product_configration.product_name %></td>
              <td class="col-sm-3"><%= product_configration.product_sku %></td>
              <td class="col-sm-3"><%= product_configration.option_count %></td>
              <td class="col-sm-3"><%= link_to 'Delete', product_configration, method: :delete, :class => "btn btn-danger" %></td>
            </tr>
          <% end %>
        <% else %>
          <td colspan="4" class="text-center"> No History Found </td>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

</div>